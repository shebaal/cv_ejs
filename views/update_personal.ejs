<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <%- include('./head'); %>
        <%- include('../styles/style'); %>

</head>

<body>





    <%- include('./sidepar'); %>

        <div class="content-container bg-light">

            <div class="container-fluid">

                <!-- Main component for a primary marketing message or call to action -->

                <div> 
                    <div class="contact-form-wrapper d-flex">

                       <form action="/people/update/<%= data._id %>" method="post" enctype="multipart/form-data"  class="contact-form  ">
                            <div>
                                <!-- <input type="file" name="p_image"> -->
                                <div class="avatar-upload">
                                    <div class="avatar-edit">
                                        <input type='file' id="imageUpload" name="p_image" accept=".png, .jpg, .jpeg" value="<%= data.image %>"/>
                                        <label for="imageUpload"><svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 0 24 24" width="24px" fill="#708294"><path d="M0 0h24v24H0z" fill="none"/><path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"/></svg></label>
                                    </div>
                                    <div class="avatar-preview">
                                        <div id="imagePreview"
                                        
                                            >
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex">
                                <input type="text" class="form-control rounded border-white mb-3 form-input"
                                    name="p_name" placeholder="first Name" value="<%= data.name %>">
                                    <input type="text" class="form-control rounded border-white mb-3 form-input"
                                    name="pl_name" placeholder="last Name" value="<%= data.l_name %>">
                            </div>

                            <div class="d-flex">
                                <input type="number" class="form-control rounded border-white mb-3 form-input"
                                    name="p_price" placeholder="Number" value="<%= data.number %>">
                                    <input type="email" class="form-control rounded border-white mb-3 form-input"
                                    name="p_email" placeholder="Email" value="<%= data.email %>" >
                            </div>
                            <div>
                                <textarea  class="form-control rounded border-white mb-3 form-input"
                                    name="p_description" placeholder="Summery" value="<%= data.description %> ">
          </textarea>
                            </div>

<div class="text-center">
           <input type="submit" value="save" class="p-2 px-2 rounded-1 border-0 bg-primary text-white">

</div>

                     
                         </form>
                    </div>
                </div>
            </div>
        </div>
        <script>
            function readURL(input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        $('#imagePreview').css('background-image', 'url(' + e.target.result + ')');
                        $('#imagePreview').hide();
                        $('#imagePreview').fadeIn(650);
                    }
                    reader.readAsDataURL(input.files[0]);
                }
            }
            $("#imageUpload").change(function () {
                readURL(this);
            });
        </script>
</body>

</html>